	    public static void PressedEnter() {
	        BufferedReader br= new BufferedReader(new InputStreamReader(System.in)); {
	        while(true){
	            String s = null;
	            try {
	                s = br.readLine();
	            } catch (IOException e) {
	                e.printStackTrace();
	            }
	            if(s.length() == 0){
	                break;
	            	}
	        	}
	        }
	    }
	    
